<section class="text-center">                                                                                                             
  <div class="container">
    <div>
          <h2>
            <%= link_to @gmember.present("user"), X.path_for("show_user", { user: @gmember.member }) %>
            <%= X.t("in_group") %>
            <%= link_to @group.present, X.path_for("show_group", { group: @group }) %>
          </h2>
          <% if @view_manager.show?("trust_for_person_link")  %>
            <div>
              <%= link_to X.t("new_trust"), X.path_for("new_trust", { user: @gmember.member }), class: "btn btn-primary" %>
            </div>
          <% end %>
          <table class="table">
            <thead>
              <tr>
                <th><%= X.t("tower_of_trust") %></th>
              </tr>
            </thead>
            <tbody>
              <% @tower.each do |tower_floor| %>
                <tr bgcolor="<%= @gmember.tower_top.color %>">
                  <td>
                    <%= link_to tower_floor.present("tower"), X.path_for("show_gmember", { gmember: tower_floor }) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div>
          <h3><%= X.t("has_trust") %></h3>
          <div>
            <% @trusts_on.each do |trust| %>
              <%= link_to trust.truster.present("user"), X.path_for("show_gmember", { gmember: trust.truster }) %>
            <% end %>
          </div>
        </div>
        <div>
          <h3><%= X.t("voting_record") %></h3>
          <table class="table">
            <thead>
              <tr>
                <th scope="col"><%= X.t("name") %></th>
                <th><%= X.t("status") %></th>
                <th><%= X.t("on_date") %></th>
              </tr>
            </thead>
            <tbody>
              <% @trusts_of.each do |trust| %>
                <tr>
                  <td>
                    <%= link_to trust.trustee.present("user"), X.path_for("show_gmember", { gmember: trust.trustee }) %>
                  </td>
                  <td>
                    <%= trust.present_status %>
                  </td>
                  <td>
                    <%= trust.present_created_at %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</section>

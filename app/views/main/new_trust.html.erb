<section class="text-center">                                                                                                             
  <div class="container">
    <h2><%= @trustee_user.present %></h2>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><%= X.t("group") %></th>
            <th><%= X.t("action") %></th>
          </tr>
        </thead>
        <tbody>
          <% @common.each do |common| %>
            <tr>
              <td>
                <%= link_to common[:group].present, X.path_for("show_group", { group: common[:group] }) %>
              </td>
              <td>
                <%= link_to X.t("trust"),
                            X.path_for("do_trust_regular", { trustee: common[:trustee_gmember] }),
                            method: "post",
                            class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <div>
  </div>
</section>
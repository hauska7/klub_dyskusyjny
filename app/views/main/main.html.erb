<section class="text-center">                                                                                                             
  <div class="container">
    <div>
      <div>
        <div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col"><%= X.t("name") %></th>
                <th><%= X.t("team") %></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= link_to user.present("user"), X.path_for("show_user", { user: user }) %>
                  </td>
                  <% if user.team  %>
                    <td bgcolor="<%= user.team.color %>">
                      <%= link_to user.team.present("team"), X.path_for("show_user", { user: user.team }) %>
                     </td>
                  <% else %>
                    <td></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

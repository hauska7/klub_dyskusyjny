<!DOCTYPE html>
<html>
  <head>
    <title><%= X.t("klub_dyskusyjny") %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <!-- Custom styles for this template -->

    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" href="<%= X.path_for('root') %>"><%= X.app_name %></a>
      <% if current_user %>
        <a class="navbar-brand" href="<%= X.path_for('show_user', { user: current_user}) %>"><%= X.t("home") %></a>
      <% end %>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav ml-auto">
          <a class="navbar-brand" href="<%= X.path_for('about') %>"><%= X.t("about") %></a>
          <% unless current_user %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle"
                 href="#"
                 id="dropdown01"
                 data-toggle="dropdown"
                 aria-haspopup="true"
                 aria-expanded="false">
                <%= X.t("quick_login") %>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="<%= X.path_for('do_login_as_new_user') %>"><%= X.t("login_as_new_user") %></a>
              </div>
            </li>
          <% end %>

          <% if current_user %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle"
                 href="#"
                 id="dropdown01"
                 data-toggle="dropdown"
                 aria-haspopup="true"
                 aria-expanded="false">
                <%= current_user.name %>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="<%= X.path_for('do_logout') %>">
                  <%= X.t("logout") %>
                </a>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="<%= X.path_for('new_registration') %>"><%= X.t("sign_up") %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= X.path_for('new_login') %>"><%= X.t("login") %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
